rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile rules
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Prevent direct modification of coins and totalEarned
      // Only Cloud Functions should update these fields
      allow write: if false;
    }
    
    // Withdrawal requests rules
    match /withdrawals/{withdrawalId} {
      // Users can read their own withdrawal requests
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Users cannot create or update withdrawals directly
      // Only Cloud Functions should handle this
      allow write: if false;
    }
  }
}
